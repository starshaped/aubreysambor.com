---
title: Tag Archives
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
permalink: /tags/{{ tag | slug }}/
eleventyExcludeFromCollections: true
---
{% extends 'layouts/base.njk' %}

{# Post list content #}
{% set postListItems = collections[tag] | reverse %}
{% set postListHeading = "Posts tagged with “" ~ tag ~ "”" %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="post-listing">
      {% include "layouts/partials/components/post-listing.njk" %}
    </article>
  </main>
{% endblock %}
