{% extends 'layouts/base.njk' %}

{% block content %}
  <main id="main-content" tabindex="-1">
    <article class="post">
      <h1 class="post__title">{{ title }}</h1>

      <div class="post__meta">
        {% if date %}
          <time datetime="{{ date | htmlDateFilter }}" class="post__date">{{ date | formattedDateFilter }}</time>
        {% endif %}

        {% if tags %}
          <ul class="tags">
            {% for tag in tags %}
              <li class="tags__tag">
                <a class="tags__tag-link" href="/tags/{{ tag | slug }}">{{ tag }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      {{ content | safe }}

    </article>
  </main>
{% endblock %}
