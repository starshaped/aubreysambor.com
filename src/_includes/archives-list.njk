{% for year, posts in postListItems | groupby("data.year") | dictsort | reverse %}

  <div class="archives__year">
    <h2>{{ year }} </h2>
      <div class="archives__list">
      {% for post in posts %}
        <div class="archives__item">
          <time class="archives__date" datetime="{{ post.date | htmlDateFilter }}">{{ post.date | archiveDate }}</time>
          <p><a href="{{ post.url }}">{{ post.data.title }}</a></p>
        </div>
      {% endfor %}
    </div>
  </div>
{% endfor %}
