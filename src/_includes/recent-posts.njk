{% if loop.index == 2 %}
  <section class="content__extra recent-posts">
    <h2>Recent posts</h2>
    <ul class="content__list recent-posts__list" style="padding-bottom: 32px;">
{% endif %}
      <li class="recent-posts__list-item">
        <a href="{{ post.url }}">{{ post.data.title }}</a> <time class="archives__date" datetime="{{ post.date | htmlDateFilter }}"><i>{{ post.date | postDate }}</i></time></li>
{% if loop.last %}
    </ul>
    <p><a href="archives">View all archives</a></p>
  </section>
{% endif %}
