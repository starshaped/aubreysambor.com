  <section class="recent-posts">
    <h2 class="recent-posts__title">Recent posts</h2>
    <ul class="recent-posts__list">
      {%- for post in postListItems -%}
      {% if loop.index0 < 5 %}
      <li class="recent-posts__list-item">
        <h3 class="recent-posts__post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <time class="recent-posts__date" datetime="{{ post.data.dateString }}">
          <i>{{ post.data.postDateString }}</i>
        </time>
      </li>
      {% endif %}
        {%- endfor -%}
    </ul>
    <p><a href="archives">View all archives</a></p>
  </section>
